<form class="{{cssClass}} flexcol" autocomplete="off">
  
    {{!-- Sheet Header --}}
    <header class="monster-sheet-header">
        <img class="profile-img"
             alt="Profile Image"
             src="{{actor.img}}"
             data-edit="img"
             title="{{actor.name}}"
             height="100"
             width="100"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name"
                                        type="text"
                                        value="{{actor.name}}"
                                        placeholder="Name"/></h1>

            {{!-- The grid classes are defined in scss/global/_grid.scss. To
            use, use both the "grid" and "grid-Ncol" class where "N" can be
            any number from 1 to 12 and will create that number of columns.
            --}}

            <div class="resources grid grid-4col">
                {{!-- "flex-group-center" is also defined in the _grid.scss
                file and it will add a small amount of padding, a border, and
                will center all of its child elements content and text. --}}
 
                <div class="resource flex-group-center rollable"
                     data-roll="@attributes.hit_dice.value"
                     data-label="Hit Dice">
                    <label for="data.attributes.hit_dice.value"
                           class="resource-label">Hit Dice</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.attributes.hit_dice.value"
                               value="{{data.attributes.hit_dice.value}}"
                               data-dtype="String"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.hit_points.value"
                           class="resource-label">Hit Points</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.hit_points.value"
                               value="{{data.hit_points.value}}"
                               data-dtype="Number"/>
                        <span> / </span>
                        <input type="text"
                               name="data.hit_points.max"
                               value="{{data.hit_points.max}}"
                               data-dtype="Number"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.attributes.thac0.value"
                           class="resource-label">THAC0</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.attributes.thac0.value"
                               value="{{data.attributes.thac0.value}}"
                               data-dtype="Number"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.attributes.ac.value"
                           class="resource-label">Armour Class</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.attributes.ac.value"
                               value="{{data.attributes.ac.value}}"
                               data-dtype="Number"/>
                    </div>
                </div>
            </div>

        </div>
    </header>
  
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="information">Monster Information</a>
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="items">Items</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Information Tab --}}

        <div class="tab information"
             data-group="primary"
             data-tab="information">
            <div class="resources grid grid-4col">
                <div class="resource flex-group-center">
                    <label for="data.alignment"
                           class="resource-label">Alignment</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.alignment"
                               value="{{data.alignment}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.attributes.intelligence.value"
                           class="resource-label">Intelligence</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.attributes.intelligence.value"
                               value="{{data.attributes.intelligence.value}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.frequency"
                           class="resource-label">Frequency</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.frequency"
                               value="{{data.frequency}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.no_appearing"
                           class="resource-label">Number Appearing</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.no_appearing"
                               value="{{data.no_appearing}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.size"
                           class="resource-label">Size</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.size"
                               value="{{data.size}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.no_of_attacks"
                           class="resource-label">Number of Attacks</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.no_of_attacks"
                               value="{{data.no_of_attacks}}"
                               data-dtype="Number" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.damage"
                           class="resource-label">Damage</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.damage"
                               value="{{data.damage}}"
                               data-dtype="String" />
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.magic_resistance"
                           class="resource-label">Magic Resistance</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text"
                               name="data.magic_resistance"
                               value="{{data.magic_resistance}}"
                               data-dtype="Number" />
                    </div>
                </div>
            </div>
        </div>

        {{!-- Biography Tab --}}
        <div class="tab biography"
             data-group="primary"
             data-tab="description">

            {{editor content=data.biography target="data.biography"
                     button=true owner=owner editable=editable}}
        </div>

        {{!-- Owned Items Tab --}}
        <div class="tab items"
             data-group="primary"
             data-tab="items">
            <ol class="items-list">
                <li class="item flexrow item-header">
                    <div class="item-image"></div>
                    <div class="item-name">Name</div>
                    <div class="item-controls">
                        <a class="item-control item-create"
                           title="Create item"
                           data-type="item">
                            <i class="fas fa-plus"></i> Add item
                        </a>
                    </div>
                </li>
                {{#each actor.items as |item id|}}
                    <li class="item flexrow"
                        data-item-id="{{item._id}}">
                        <div class="item-image">
                            <img src="{{item.img}}"
                                 title="{{item.name}}"
                                 width="24"
                                 height="24"/>
                        </div>
                        <h4 class="item-name">{{item.name}}</h4>
                        <div class="item-controls">
                            <a class="item-control item-edit"
                               title="Edit Item">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="item-control item-delete"
                               title="Delete Item">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </li>
                {{/each}}
            </ol>
        </div>
    </section>
</form>
